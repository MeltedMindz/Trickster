# AI Religion Architects - Environment Configuration
# Copy this file to .env and update with your actual values

# ========================================
# Claude API Configuration
# ========================================
CLAUDE_API_KEY=sk-ant-api03-your-claude-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=2000
CLAUDE_TEMPERATURE=0.7

# ========================================
# Scheduling Configuration
# ========================================
# How often to run debate cycles (in hours)
CYCLE_INTERVAL_HOURS=1

# ========================================
# API Retry Configuration
# ========================================
API_RETRY_COUNT=3
API_RETRY_DELAY=1.0
API_RETRY_BACKOFF=2.0
API_TIMEOUT=60

# ========================================
# Database Configuration
# ========================================
DB_PATH=religion_memory.db

# ========================================
# Logging Configuration
# ========================================
LOG_DIR=logs
LOG_LEVEL=INFO
API_ERROR_LOG=api_errors.log

# ========================================
# WebSocket Configuration
# ========================================
WEBSOCKET_URL=http://localhost:8000
WEBSOCKET_PORT=8000

# ========================================
# Application Configuration
# ========================================
ENVIRONMENT=development
DEBUG=false