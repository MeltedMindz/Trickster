{
  "version": 2,
  "name": "trickster",
  "public": true,
  "outputDirectory": "public",
  "buildCommand": "cp index.html public/ && cp -r js public/ && cp -r styles public/ || echo 'Files already in public'",
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/js/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/styles/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    }
  ]
}